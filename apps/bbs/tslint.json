{
	"defaultSeverity": "error",
	"extend": [ "tslint-config-alloy", "tslint-config-prettier" ],
	"linterOptions": {
		"exclude": [ "**/node_modules/**" ]
	},
	"jsRules": {
		"no-unused-expression": true
	},
	"rules": {
		"typedef": {
			"options": [ "property-declaration", "member-variable-declaration" ]
		},
		"file-name-casing": [ true, "kebab-case" ],
		"class-name": true,
		"interface-name": true,
		"variable-name": {
			"options": [
				"ban-keywords",
				"check-format",
				"allow-leading-underscore",
				"allow-snake-case",
				"allow-pascal-case"
			]
		},
		"no-var-keyword": true,
		"no-var-requires": true,
		"no-any": false,
		"no-string-literal": false,
		"await-promise": true,
		"promise-function-async": true
	},
	"rulesDirectory": []
}
